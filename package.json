{
  "name": "mars-refactoring",
  "displayName": "MARS: Memory-Augmented Retrieval & Refactoring System",
  "description": "AI 코드 수정의 의도를 기억하고, 영향 범위를 분석하며, RAG 기반으로 안전한 리팩터링을 지원하는 VSCode 확장",
  "version": "0.1.0",
  "publisher": "mars-dev",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "refactoring",
    "memory",
    "RAG",
    "blast-radius",
    "intent"
  ],
  "activationEvents": [
    "onView:mars.sidebarView",
    "onView:mars.blastRadiusTree",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mars.analyzeBlastRadius",
        "title": "MARS: Analyze Blast Radius",
        "icon": "$(symbol-structure)"
      },
      {
        "command": "mars.recordIntent",
        "title": "MARS: Record Intent",
        "icon": "$(note)"
      },
      {
        "command": "mars.searchIntents",
        "title": "MARS: Search Past Intents",
        "icon": "$(search)"
      },
      {
        "command": "mars.toggleMode",
        "title": "MARS: Toggle Beginner/Expert Mode",
        "icon": "$(settings-gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mars-sidebar",
          "title": "MARS",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "mars-sidebar": [
        {
          "type": "webview",
          "id": "mars.sidebarView",
          "name": "MARS Panel"
        },
        {
          "id": "mars.blastRadiusTree",
          "name": "Blast Radius"
        }
      ]
    },
    "configuration": {
      "title": "MARS",
      "properties": {
        "mars.mode": {
          "type": "string",
          "default": "beginner",
          "enum": [
            "beginner",
            "expert"
          ],
          "description": "MARS 동작 모드 (beginner: 자동 제안 / expert: 수동 승인)"
        },
        "mars.embeddingProvider": {
          "type": "string",
          "default": "local",
          "enum": [
            "local",
            "openai"
          ],
          "description": "임베딩 제공자 선택"
        },
        "mars.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API 키 (임베딩 제공자가 openai일 때 필요)"
        },
        "mars.riskThreshold": {
          "type": "number",
          "default": 60,
          "minimum": 0,
          "maximum": 100,
          "description": "위험도 경고 임계값 (0-100)"
        },
        "mars.excludePaths": {
          "type": "array",
          "default": [],
          "description": "분석에서 제외할 경로 패턴 목록"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "mars.analyzeBlastRadius",
          "group": "mars@1",
          "when": "editorTextFocus"
        },
        {
          "command": "mars.recordIntent",
          "group": "mars@2",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:webview && npm run build:ext",
    "build:ext": "node esbuild.config.mjs --production",
    "build:webview": "cd webview-ui && npm run build",
    "watch": "node esbuild.config.mjs --watch",
    "lint": "eslint src/ --ext .ts",
    "test": "vitest run",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "ts-morph": "^22.0.0",
    "openai": "^4.28.0",
    "@xenova/transformers": "^2.17.0"
  }
}
